#!/usr/bin/env zsh

if [[ -z "$(which zsh)" ]]; then
    echo "zsh not installed. Skipping setup."
    exit 1
fi

# append contents instead of full overwrite
cat ./zshrc >> ~/.zshrc

# check if on macOS
if [[ $OSTYPE == 'darwin'* ]]; then
	echo "Linked $(ls -l -G $HOME/.tmux.conf | cut -d ' ' -f 10-12)"
else
	echo "Linked $(ls -l --color=auto $HOME/.tmux.conf | cut -d ' ' -f 10-12)"
fi
